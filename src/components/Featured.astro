---
import Navigation from '../components/Navigation.astro';

export interface Props {
    type: string,
    path: string,
    id: string
}

const {type, path, id} = Astro.props;

---

<section id={id} class="flex h-screen relative snap-start">
    <div class="flex w-4/12 pl-12">
        <slot />
    </div>
    <div class="flex w-8/12 relative">
        <div class="w-2/12 z-10 bg-gradient-to-r from-white absolute h-screen z-10"></div>
        <div class="w-4/12 z-10 bg-gradient-to-r from-white absolute h-screen z-10"></div>
        <div class="w-8/12 z-10 bg-gradient-to-r from-white absolute h-screen z-10"></div>
        <div class="w-full h-screen z-0">        
            {type === "video" && 
                <video class="object-cover w-full h-full" playsinline autoplay muted loop>
                    <source src={path} type="video/mp4" />
                    Your browser does not support the video tag.
                </video>
            }
            {type === "image" && <img src={path} alt="" class="w-full h-full object-cover" />}
        </div>
    </div>
</section>


