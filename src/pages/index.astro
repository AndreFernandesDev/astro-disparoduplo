---
import Layout from '../layouts/Layout.astro';
import Featured from '../components/Featured.astro';
import { albums } from '../config/db';
---
<Layout title="Casamentos no Algarve">
	<main class="w-full h-full overflow-y-scroll snap-y snap-mandatory">

        <Featured id="home" type="image" path="hero2.webp">
                <div class="flex flex-col w-full lg:justify-center items-center lg:items-left">
                    <img class="w-11/12 object-contain mb-3 lg:mb-6 lg:mb-12" src="logo2.png">

                    <h1 class="text-3xl lg:text-5xl lg:ml-24 mb-2 lg:mb-6">Sabe mais sobre n√≥s</h1>
                    <p class="w-2/3 lg:w-full text-md lg:text-xl lg:ml-24 mb-6 lg:mb-12 lg:leading-10 text-center lg:text-left">Focamo-nos em criar momentos que duram para sempre.</p>
                    <div class="h-0.5 w-6/12 lg:w-8/12 bg-black"></div>
                    <a href={`/albums`}><button class="text-white w-48 mt-6 lg:ml-24 py-3 bg-black text-md lg:text-lg">Ver todos os albums</button></a>
                </div>
        </Featured>

		{albums && albums.map((album) => {
            return (
                <Featured id="home" type="image" path={album.featured ? album.featured.path : ""}>
                    <div class=" flex w-full flex-col lg:h-screen lg:justify-center items-center lg:items-left">
                        <h1 class="text-3xl w-10/12 lg:w-full text-center lg:text-left lg:text-6xl lg:ml-24 mb-6 lg:mb-12">{album.name}</h1>
                        {album.description && <p class="w-2/3 lg:w-full text-xl lg:ml-24 mb-6 lg:mb-12 leading-10">{album.description}</p>}
                        <div class="h-0.5 w-7/12 lg:w-8/12 bg-black"></div>
                        <a href={`/album/${album.id}`}><button class="text-white w-48 mt-6 lg:ml-24 py-3 bg-black text-lg">Ver todas as fotos</button></a>
                    </div>
                </Featured>
            )
        })}
	</main>
</Layout>
